let main_button = document.getElementById("main");
let about_button = document.getElementById("about");
let bigmac_button = document.getElementById("bigmac");
let powers_button = document.getElementById("powers");
let info = document.getElementById("info");

about_button.addEventListener('click', function () {
    info.style.cssText = 'overflow-y: none;';
    info.innerHTML = "<h1>Обо мне</h1><p>Я Герогий Юрьевич.</p><br><br><p>велосипе</p>";
});

main_button.addEventListener('click', function () {
    info.style.cssText = 'overflow-y: none;';
    info.innerHTML = "<h1>Добро пожаловать!</h1> \
                <p>Это сайт Георгия Юрьевича, т.е. мой. Я занимаюсь поеданием вселенных (да-да, я Галактус).</p> \
                <p>В свободное время я угораю с фоток мелкого Олега.</p>";
});

bigmac_button.addEventListener('click', function () {
    info.style.cssText = 'overflow-y: scroll;';
    info.innerHTML = "<h1>О Бигмаке (Олеге)</h1> \
                <p>Бигмак - мой лучший друг! Не могу жить без него, стабильно раз в неделю я его поедаю.</p> \
                <p>Он помог мне получить несварение желудка и запор.</p> \
                <p>Он дает мне энергию и витамина D, помогая мне жить лучше.</p> \
                <p>А еще он дает мне жировую супер-силу, которую я накапливаю в складках, и защищаюсь ими от атак противника (Олега).</p> \
                <p>Я коплю их как ульту, и когда приходит время, я начинаю душить Олега пузом, накладывая на него дебаф зловония, из-за чего он быстро теряет силы и воняет вместе со мной.</p> \
                <p>Сам Бигмак очень любит меня и любит помогать мне получать энергию, витамины, и силу. Он всегда готов помочь мне и помочь мне в любых ситуациях.</p> \
                <p>Еще, в свободное время я тапаю на Олега и он выдает мне деньги в виде бигмака.</p> \
                <p>Когда я потратил на Бигмак все свои деньги, он быстро вернулся ко мне и дал еще один бигмак.</p> \
                <p>Мне очень приятно и нравится, что Бигмак помог мне и помог мне в любых ситуациях.</p>";
});

powers_button.addEventListener('click', function () {
    info.style.cssText = 'overflow-y: none;';
    info.innerHTML = "<h1>Физические способности</h1> \
                <p>Я умею бегать (10 метров за 3 минуты).</p> \
                <p>Я умею прыгать (только без 'п').</p> \
                <p>Я умею отражать удары пузом.</p> \
                <p>Я умею коммуницировать с Олегом (только я могу это делать, рекорд - 3 минуты)</p> \
                <p>Я могу съесть 4 наггетса и двойной гранд за 6 минут.</p>";
});
